!!!
%html
  %head
    %meta{:name => 'viewport', :content => "width=device-width, initial-scale=1.0, maximum-scale=1.0" }
    %meta{:name => 'description', :content => "Bruce McElroy is a Front End Web Designer located in Pittsburgh, PA." }
    %title Bruce McElroy | Front End Web Designer - Pittsburgh
    = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
    = csrf_meta_tags
    :javascript
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-33865271-1']);
      _gaq.push(['_setDomainName', 'visualbam.com']);
      _gaq.push(['_setAllowLinker', true]);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
  %body
    = render 'layouts/includes/nav'
    .main-container
      = yield
    = render 'layouts/includes/footer'
    = javascript_include_tag "application", "data-turbolinks-track" => true
    :javascript
      jQuery("body").prepend('<div class="spinner"></div>');
      jQuery(document).ready(function() {
          jQuery(".spinner").fadeOut(800);
      });
