!!!
%html
  %head
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0, maximum-scale=1.0" }
    %meta{:name => "description", :content => "Bruce McElroy is a Front End Web Designer located in Pittsburgh, PA and currently learning Ruby on Rails." }
    %title Bruce McElroy | Front End Web Designer | Pittsburgh
    %link{href: "//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/css/bootstrap-combined.no-icons.min.css", rel: "stylesheet"}/
    %link{href: "//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css", rel: "stylesheet"}/
    = stylesheet_link_tag  "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag :modernizr
    <!--[if lte IE 8]>
    = javascript_include_tag "selectivizr"
    <![endif]-->
    = csrf_meta_tags
    - if Rails.env.production?
      :javascript
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
      
        ga('create', '#{GOOGLE_TA}', 'visualbam.com');
        ga('send', 'pageview');
  %body
    = render "layouts/includes/nav"
    = yield
    = render "layouts/includes/footer"
    = javascript_include_tag "application", "data-turbolinks-track" => true
    :javascript
      jQuery("body").prepend('<div class="spinner"></div>');
      jQuery(document).ready(function() {
          jQuery(".spinner").fadeOut(800);
      });
